<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxhibernate.LibroController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Título -->
    <Label text="Gestión de Libros" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Formulario de entrada -->
    <VBox spacing="10" style="-fx-border-color: #95a5a6; -fx-border-radius: 5; -fx-background-color: #ffffff;">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
        </padding>

        <Label text="Agregar o Modificar Libro" style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Título:" style="-fx-font-size: 12;" minWidth="80" />
            <TextField fx:id="tfTitulo" promptText="Ingresa el título del libro" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Label text="Autor:" style="-fx-font-size: 12;" minWidth="80" />
            <ComboBox fx:id="cbAutor" promptText="Selecciona un autor" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Label text="Editorial:" style="-fx-font-size: 12;" minWidth="80" />
            <TextField fx:id="tfEditorial" promptText="Ingresa la editorial" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Label text="Año de publicación:" style="-fx-font-size: 12;" minWidth="80" />
            <TextField fx:id="tfAnyo" promptText="Ingresa el año (solo números)" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Button fx:id="btnAgregar" text="Agregar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnModificar" text="Modificar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnLimpiar" text="Limpiar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <!-- Búsqueda -->
    <VBox spacing="10" style="-fx-border-color: #95a5a6; -fx-border-radius: 5; -fx-background-color: #ffffff;">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
        </padding>

        <Label text="Buscar Libro" style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <TextField fx:id="tfBuscar" promptText="Ingresa el título del libro a buscar" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBuscar" text="Buscar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnListarTodos" text="Listar Todos" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnLibrosSinPrestar" text="Sin Prestar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand; -fx-background-color: #27ae60; -fx-text-fill: white;" />
        </HBox>
    </VBox>

    <!-- Tabla de libros -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Lista de Libros" style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <TableView fx:id="libroTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colTitulo" prefWidth="200" text="Título" />
                <TableColumn fx:id="colAutor" prefWidth="150" text="Autor" />
                <TableColumn fx:id="colEditorial" prefWidth="150" text="Editorial" />
                <TableColumn fx:id="colAnyo" prefWidth="100" text="Año" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button fx:id="btnEliminar" text="Eliminar Seleccionado" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #e74c3c;" />
        </HBox>
    </VBox>
</VBox>
