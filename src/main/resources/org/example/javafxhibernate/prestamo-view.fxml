<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxhibernate.PrestamoController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Título -->
    <Label text="Gestión de Préstamos" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Formulario de entrada -->
    <VBox spacing="10" style="-fx-border-color: #95a5a6; -fx-border-radius: 5; -fx-background-color: #ffffff;">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
        </padding>

        <Label text="Agregar o Modificar Préstamo" style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Socio:" style="-fx-font-size: 12;" minWidth="80" />
            <ComboBox fx:id="cbSocio" promptText="Selecciona un socio" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Label text="Libro:" style="-fx-font-size: 12;" minWidth="80" />
            <ComboBox fx:id="cbLibro" promptText="Selecciona un libro" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Label text="Fecha de Préstamo:" style="-fx-font-size: 12;" minWidth="80" />
            <DatePicker fx:id="dpFechaPrestamo" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Label text="Fecha de Devolución:" style="-fx-font-size: 12;" minWidth="80" />
            <DatePicker fx:id="dpFechaDevolucion" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Button fx:id="btnAgregar" text="Agregar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnModificar" text="Modificar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnLimpiar" text="Limpiar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <!-- Búsqueda -->
    <VBox spacing="10" style="-fx-border-color: #95a5a6; -fx-border-radius: 5; -fx-background-color: #ffffff;">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
        </padding>

        <Label text="Buscar Préstamo por Nombre de Socio" style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <TextField fx:id="tfBuscar" promptText="Ingresa el nombre del socio" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBuscar" text="Buscar" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
            <Button fx:id="btnListarTodos" text="Listar Todos" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <!-- Tabla de préstamos -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Lista de Préstamos" style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <TableView fx:id="prestamoTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colSocio" prefWidth="150" text="Socio" />
                <TableColumn fx:id="colLibro" prefWidth="200" text="Libro" />
                <TableColumn fx:id="colFechaPrestamo" prefWidth="130" text="Fecha Préstamo" />
                <TableColumn fx:id="colFechaDevolucion" prefWidth="130" text="Fecha Devolución" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button fx:id="btnEliminar" text="Eliminar Seleccionado" style="-fx-padding: 8 20; -fx-font-size: 12; -fx-cursor: hand; -fx-text-fill: white; -fx-background-color: #e74c3c;" />
        </HBox>
    </VBox>
</VBox>
